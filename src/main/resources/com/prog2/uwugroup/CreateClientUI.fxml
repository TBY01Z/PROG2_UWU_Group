<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.TextFlow?>
<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prog2.uwugroup.CreateClientUIControl">
   <children>
      <MenuBar layoutX="-1.0" layoutY="2.0" prefHeight="26.0" prefWidth="800.0">
        <menus>
          <Menu mnemonicParsing="false" text="Quit">
            <items>
              <MenuItem mnemonicParsing="false" text="Close Client" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Client">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
     <TextField fx:id="input" layoutX="58.0" layoutY="418.0" onAction="#sendMessage" prefHeight="42.0" prefWidth="490.0" promptText="Start typing your message here..." />
     <TextArea fx:id="messages" layoutX="8.0" layoutY="28.0" prefHeight="390.0" prefWidth="590.0" />
     <Button layoutX="547.0" layoutY="418.0" mnemonicParsing="false" onAction="#sendFile" prefHeight="42.0" prefWidth="52.0" text="Send" />
      <Button fx:id="attachment" layoutX="25.0" layoutY="426.0" mnemonicParsing="false" text="+" onAction="#sendMessage"/>
   </children>
</AnchorPane>
