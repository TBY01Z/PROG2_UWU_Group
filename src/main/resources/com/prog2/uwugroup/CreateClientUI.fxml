<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prog2.uwugroup.CreateClientUIControl">
   <children>
      <MenuBar layoutX="-1.0" layoutY="2.0" prefHeight="26.0" prefWidth="800.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="Quit Application" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Client">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="Disconnect" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
     <TextField fx:id="inputText" layoutX="58.0" layoutY="418.0" onAction="#sendMessage" prefHeight="42.0" prefWidth="679.0" promptText="Start typing your message here..." />
     <TextArea fx:id="messages" layoutX="8.0" layoutY="28.0" prefHeight="390.0" prefWidth="783.0" />
     <Button layoutX="739.0" layoutY="418.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="42.0" prefWidth="52.0" text="Send" />
      <Button fx:id="attachment" layoutX="21.0" layoutY="427.0" mnemonicParsing="false" onAction="#sendFile" text="+" />
   </children>
</AnchorPane>
